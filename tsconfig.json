{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src"
    ],
     "exclude": [
        "node_modules"
    ]
}